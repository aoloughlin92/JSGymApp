{{> membermenu id="membersettings"}}

<div class="ui two column grid basic middle aligned segment">
  <div class="column">
    <img class="ui image" src="https://cdn.glitch.com/be342d31-708b-488c-89fa-309fd26498cb%2Fabout.jpg?v=1565976108829">
  </div>
  <div class="column">
    <form class="ui stacked segment form" action="/membersettings/{{member.id}}" method="POST">
      <h3 class="ui header">Register</h3>
      <div class="two fields">
        <div class="field">
          <label>Name</label>
          <input placeholder="Name" type="text" name="name" value="{{member.name}}">
        </div>
        <div class="field">
          <label>Gender</label>
          <input placeholder="Gender" type="text" name="gender" value="{{member.gender}}">
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input placeholder="Email" type="text" name="email" value="{{member.email}}">
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password" value="{{member.password}}">
      </div>
      <div class="field">
        <label>Address</label>
        <input type="text" name="address" value="{{member.address}}">
      </div>
      <div class="two fields">
        <div class="field">
          <label>Height</label>
          <input placeholder="Name" type="text" name="height" value="{{member.height}}">
        </div>
        <div class="field">
          <label>Starting Weight</label>
          <input placeholder="Starting Weight" type="text" name="startingweight" value="{{member.startingweight}}">
        </div>
      </div>
      <button class="ui blue submit button">Submit</button>
    </form>
  </div>
</div>